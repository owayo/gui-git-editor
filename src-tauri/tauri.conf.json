{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gui-git-editor",
  "version": "0.1.0",
  "identifier": "com.owa.gui-git-editor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Git Editor",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "GUI Git Editor - A visual editor for Git operations",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "required": false
        }
      ]
    }
  }
}
