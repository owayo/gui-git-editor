{
  "name": "gui-git-editor",
  "private": true,
  "version": "0.1.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "npm run format && npm run tauri:fmt && tauri build",
    "tauri:build:debug": "tauri build --debug",
    "tauri:release-build": "node update-version.js && npm run format && npm run tauri:fmt && tauri build",
    "tauri:fmt": "cd src-tauri && cargo fmt",
    "tauri:update": "npm update @tauri-apps/cli @tauri-apps/api @tauri-apps/plugin-cli @tauri-apps/plugin-opener",
    "tauri:update:cargo": "cd src-tauri && cargo update",
    "tauri:update:all": "npm run tauri:update && npm run tauri:update:cargo",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:rust": "cd src-tauri && cargo test",
    "test:all": "npm run test && npm run test:rust"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-cli": "^2.4.1",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@tailwindcss/vite": "^4.0.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.4",
    "vitest": "^4.0.15"
  }
}
